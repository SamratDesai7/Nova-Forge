   <style>
    .parent{
        .listing-card {
  margin: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease-in-out;
}
    }

.listing-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
}

.card-img-top {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.card-body {
  padding: 20px;
}

.card-text {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.parent {
  display: flex;
  justify-content: space-between;
  padding: 20px;
}

.child {
  margin-right: 10px;
}

.btn {
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 16px;
  font-weight: bold;
  color: #fff;
  background-color: #dc3545;
  border: none;
  cursor: pointer;
}

.btn:hover {
  background-color: #c82333;
}

/* Responsive design */

@media (max-width: 992px) {
  .listing-card {
    width: 100%;
    margin: 10px;
  }
}

@media (max-width: 768px) {
  .listing-card {
    width: 100%;
    margin: 10px;
  }
  .parent {
    flex-direction: column;
  }
  .child {
    margin-bottom: 10px;
  }
}

@media (max-width: 576px) {
  .listing-card {
    width: 100%;
    margin: 10px;
  }
  .parent {
    flex-direction: column;
  }
  .child {
    margin-bottom: 10px;
  }
  .btn {
    padding: 5px 10px;
    font-size: 14px;
  }
}
