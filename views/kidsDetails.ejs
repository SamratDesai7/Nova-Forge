    <style>
        #product-details {
    max-width: 800px;
    margin: 40px auto;
    padding: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    animation: fadeIn 0.5s ease-in-out;
  }
  
  #product-details h1 {
    font-size: 24px;
    margin-bottom: 10px;
    animation: slideIn 0.5s ease-in-out;
  }
  
  #product-details h2 {
    font-size: 18px;
    margin-bottom: 10px;
    animation: slideIn 0.5s ease-in-out;
  }
  
  #product-details img {
    width: 50%;
    height: 500px;
    object-fit: cover;
    border-radius: 10px;
    animation: zoomIn 0.5s ease-in-out;
  }
  
  #product-details p {
    margin-bottom: 20px;
    animation: fadeIn 0.5s ease-in-out;
  }
  
  /* Animations */
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  
  @keyframes slideIn {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0);
    }
  }
  
  @keyframes zoomIn {
    0% {
      transform: scale(0.5);
    }
    100% {
      transform: scale(1);
    }
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    #product-details {
      padding: 10px;
    }
    #product-details img {
      height: 200px;
    }
  }
  
  @media (max-width: 480px) {
    #product-details {
      padding: 5px;
    }
    #product-details img {
      height: 150px;
    }
  }
    </style>
